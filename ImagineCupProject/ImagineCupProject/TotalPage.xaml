<Page x:Class="ImagineCupProject.TotalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:chart="clr-namespace:ImagineCupProject.WPFChartControl;assembly=WPFChartControl"
      xmlns:local="clr-namespace:ImagineCupProject"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="850"
      Title="TotalPage">

    <Grid  Background="White">

        <TextBlock Text="- Numerical analysis" Foreground="Black" FontSize="25" FontWeight="Bold" Margin="0,0,0,555" />
        <TextBlock x:Name="operatorReceiveNumText"  Text="operator JW received 30 call"  VerticalAlignment="Center"  FontSize="20"  Margin="0,44,0,476"  />
        <chart:ChartControl Drawer="{Binding Path=BarChartDrawer}" Margin="0,125,425,60"   HorizontalAlignment="Right" Width="425"     />
        <chart:ChartControl Drawer="{Binding Path=LineSeriesChartDrawer}" Margin="426,125,9.6,60"   Width="425"   />

        <TextBlock x:Name="nameText"  Text="Code Number"  FontSize="20" FontWeight="Bold"   Margin="0,540,425,0" TextAlignment="Center"  />
        <TextBlock x:Name="nameText2"  Text="Time Number"  FontSize="20" FontWeight="Bold"  Margin="425,540,0,0" TextAlignment="Center" />


    </Grid>
</Page>
